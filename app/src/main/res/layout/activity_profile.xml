<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/activity_profile_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>

    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/activity_profile_image"/>
    <TextView
            android:text="age from Coyntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_age_and_country" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_profile_name"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Description "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_description" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/activity_profile_age_and_country"
            app:layout_constraintHorizontal_bias="0.023"/>
    <TextView
            android:text="genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_genres"
            app:layout_constraintTop_toBottomOf="@+id/activity_profile_age_and_country"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_profile_favourite_bands"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.388"/>
    <TextView
            android:text="youtubeSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_youtube_url"
            android:layout_marginBottom="212dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Bands "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_favourite_bands"
            app:layout_constraintBottom_toTopOf="@+id/activity_profile_youtube_url" android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_friends" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/qctivity_profile_songs_received"/>
    <TextView
            android:text="SongsSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_songs_sent"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_profile_image" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="SongsReceived"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/qctivity_profile_songs_received"
            app:layout_constraintStart_toEndOf="@+id/activity_profile_image" android:layout_marginStart="8dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.31"/>
</androidx.constraintlayout.widget.ConstraintLayout>