<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0fa59b"
        tools:context=".LogInSignUp.WelcomingActivity">
    <ImageView
            android:layout_width="260dp"
            android:layout_height="129dp" app:srcCompat="@drawable/meldiwhite"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"    />

    <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/app_quote_textview"
            android:text="Meet People through the love for good Music"
            android:textColor="#FFFFFF" android:textSize="32sp"
            android:textColorHint="#FFFFFF" android:textStyle="bold"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.021" android:layout_marginTop="210dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="LOGIN"
            android:background="@drawable/login_button"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:id="@+id/login_but_welc_act"
            android:textColor="@color/darkGrayLetter" android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/app_quote_textview" app:layout_constraintVertical_bias="0.611"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="SIGNUP"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="@drawable/graybutton"
            android:id="@+id/signup_but_welc_act" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_but_welc_act" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/login_but_welc_act"
            app:layout_constraintStart_toStartOf="@+id/login_but_welc_act" android:textColor="@android:color/white"
            android:textStyle="bold" android:textAllCaps="true"
            app:layout_constraintVertical_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>