<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
        android:layout_width="match_parent"
      android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:outlineProvider="bounds"
                                                           android:layout_height="wrap_content"
                                                           android:elevation="1dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           app:layout_constraintTop_toTopOf="parent"
                                                           app:layout_constraintHorizontal_bias="0.0"
                                                           app:layout_constraintVertical_bias="0.0"
                                                           android:id="@+id/constraintLayout">
            <ImageView
                    android:layout_width="34dp"
                    android:layout_height="31dp" app:srcCompat="@drawable/music_note_green"
                    android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="28dp"/>

            <TextView
                    android:background="@drawable/bluegreenbutton"
                    android:gravity="center"
                    android:text="Next"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:id="@+id/nextfromsignup_togenres" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginEnd="14dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.969"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
                android:id="@+id/password_confirm_et_signup"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:hint="Confirm Password"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="#90a4ae"
                app:layout_constraintEnd_toEndOf="@+id/password_et_signup"
                app:layout_constraintStart_toStartOf="@+id/password_et_signup"
                app:layout_constraintTop_toBottomOf="@+id/password_et_signup" android:layout_marginTop="8dp"/>

        <EditText
                android:id="@+id/password_et_signup"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="#90a4ae"
                app:layout_constraintEnd_toEndOf="@+id/email_et_signup1"
                app:layout_constraintStart_toStartOf="@+id/email_et_signup1"
                app:layout_constraintTop_toBottomOf="@id/email_et_signup1" android:layout_marginTop="8dp"/>


        <EditText
                android:id="@+id/email_et_signup1"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="#90a4ae"
                app:layout_constraintEnd_toEndOf="@+id/name_et_sign_up"
                app:layout_constraintStart_toStartOf="@+id/name_et_sign_up"
                app:layout_constraintTop_toBottomOf="@+id/name_et_sign_up" android:layout_marginTop="8dp"/>


        <EditText
                android:id="@+id/name_et_sign_up"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:textColor="#90a4ae"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="320dp"/>


        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="224dp"
                android:layout_height="190dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/boygirlsignup"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="120dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="Create an account"
                android:textSize="24dp"
                android:textColor="@color/darkGrayLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_an_account_string" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="32dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintVertical_bias="0.009"/>


        <TextView
                android:text="By continuing, you agree to our terms of service and privacy policy."
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/password_confirm_et_signup"
                app:layout_constraintHorizontal_bias="0.0" android:textSize="14sp"
                android:textColor="@color/darkGrayLetter" app:layout_constraintVertical_bias="0.348"
                android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>